version: '1'

services:
  my-scylla:
    image: scylladb/scylla
    container_name: my-scylla 
    command: --listen-address 127.0.0.1 --rpc-address 127.0.0.1 --api-address 0.0.0.0 --developer-mode 0
    ports:
      - "9042:9042"
      - "7199:7199"
      - "10000:10000"

  my-scylla2:
    image: scylladb/scylla
    container_name: my-scylla2
    command: --seeds=my-scylla --listen-address 127.0.0.1 --rpc-address 127.0.0.1 --api-address 0.0.0.0 --developer-mode 0
    ports:
      - "9043:9042"
      - "7200:7199"
      - "10001:10000"


  my-scylla3:
    image: scylladb/scylla
    container_name: my-scylla3
    command: --seeds=my-scylla --listen-address 127.0.0.1 --rpc-address 127.0.0.1  --api-address 0.0.0.0 --developer-mode 0
    ports:
      - "9044:9042"
      - "7201:7199"
      - "10002:10000"